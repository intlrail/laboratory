{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "declaration": false,
        "noImplicitAny": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "tsc"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "config.ts",
        "mapgen.ts",
        "math.ts",
        "Quadtree.ts",
        "render.ts",
        "typings/lodash/lodash.d.ts",
        "typings/perlin.d.ts",
        "typings/pixi.js/pixi.js.d.ts",
        "typings/seedrandom/seedrandom.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
